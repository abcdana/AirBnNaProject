<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace는 주로 파일의 이름으로 적는다 -->
<!-- test.xml(Mapper File) SQL 관리 파일 -->
<mapper namespace="tripinfo">

	<select id="list" resultType="com.test.bnna.admin.board.tripinfo.TripInfoDTO">
		select * from tblTripInfo order by seq desc
	</select>

	<select id="view" parameterType="String" resultType="com.test.bnna.admin.board.tripinfo.TripInfoDTO">
		select * from tblTripInfo where seq = #{seq}
	</select>

	<select id="cmtlist" parameterType="String" resultType="com.test.bnna.admin.board.tripinfo.TripInfoCmtDTO">
		select 
		    m.pic,
		    m.id,
		    tpc.*
		from tblTripinfocmt tpc
		    inner join tblMember m
		        on m.seq = tpc.seqmember
		where tpc.seqtripinfo = #{seq}
	</select>
	

</mapper>